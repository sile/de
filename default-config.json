{
    "key": {
        "Ctrl+p": [{"move": [0, -1]}],
        "Ctrl+n": [{"move": [0, 1]}],
        "Ctrl+b": [{"move": [-1, 0]}],
        "Ctrl+f": [{"move": [1, 0]}],

        "i": [{"move": [0, -1]}],
        "k": [{"move": [0, 1]}],
        "j": [{"move": [-1, 0]}],
        "l": [{"move": [1, 0]}],
        "I": [{"move": [0, -8]}],
        "K": [{"move": [0, 8]}],
        "J": [{"move": [-8, 0]}],
        "L": [{"move": [8, 0]}],

        "p": ["pick"],
        "x": ["cut"],
        "c": ["copy"],
        "v": ["draw"],

        "e": [{"external_command": {"program": "tmux", "args":["popup"]}}],

        "1": [{"mark": "ellipse"}],
        "2": [{"mark": "rectangle"}],
        "3": [{"mark": "stroke"}],
        "4": [{"mark": "line"}],
        "5": [{"mark": "region"}],
        "6": [{"mark": "fill"}],
        "7": [{"mark": "color"}],

        "m": [{"mark": "stroke"}],
        "n": [{"mark": "line"}],
        "Esc": ["cancel"],
        "d": ["erase"],

        " ": ["draw", "cancel"],
        "u": [{"anchor": "origin"}],
        "o": [{"center": "cursor"}],
        "O": [{"move": {"anchor": "origin"}}, {"center": {"anchor": "origin"}}],

        "+": [{"scale": 1}],
        "-": [{"scale": -1}],

        "z": ["undo"],
        "y": ["redo"],

        "t": [{"tick": 1}],
        "T": [{"tick": -1}],
        "Ctrl+t": [{"tick": -2147483648}],

        "q": ["quit"],
        "Ctrl+c": ["quit"]
    },
    "initial": {
        "background_color": [230, 230, 230],
        "anchors": {
            "origin": [0, 0]
        }
    }
}
