{
    "key": {
        "Up": [{"move": [0, -1]}],
        "Down": [{"move": [0, 1]}],
        "Left": [{"move": [-1, 0]}],
        "Right": [{"move": [1, 0]}],
        "Ctrl+p": [{"move": [0, -1]}],
        "Ctrl+n": [{"move": [0, 1]}],
        "Ctrl+b": [{"move": [-1, 0]}],
        "Ctrl+f": [{"move": [1, 0]}],

        "i": [{"move": [0, -1]}],
        "k": [{"move": [0, 1]}],
        "j": [{"move": [-1, 0]}],
        "l": [{"move": [1, 0]}],

        "p": ["pick"],
        "c": ["cut"],

        "m": [{"mark": "stroke"}],
        "n": [{"mark": "line"}],
        "Esc": ["cancel"],
        "Backspace": ["erase"],

        " ": ["color"],

        "z": ["undo"],
        "y": ["redo"],

        "q": ["quit"],
        "Ctrl+c": ["quit"]
    }
}
