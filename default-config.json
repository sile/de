{
    "key": {
        "Up": {"move": [0, -1]},
        "Down": {"move": [0, 1]},
        "Left": {"move": [-1, 0]},
        "Right": {"move": [1, 0]},
        "Ctrl+p": {"move": [0, -1]},
        "Ctrl+n": {"move": [0, 1]},
        "Ctrl+b": {"move": [-1, 0]},
        "Ctrl+f": {"move": [1, 0]},

        " ": "dot",

        "a": {"activate_draw_tool": "stroke"},
        "v": "fix_tool",
        "c": "cancel_tool",

        "q": "quit",
        "Esc": "quit",
        "Ctrl+c": "quit"
    },
    "init": [
        {"define": {"black": [  0,   0,   0]}},
        {"define": {"white": [255, 255, 255]}},
        {"define": {"red":   [255,   0,   0]}},
        {"define": {"green": [  0, 255,   0]}},
        {"define": {"blue":  [  0,   0, 255]}},

        {"set_dot_color": "black"}
    ]
}
